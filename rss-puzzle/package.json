{
    "name": "rss-puzzle",
    "version": "1.0.0",
    "description": "",
    "main": "webpack.base.config.js",
    "scripts": {
        "start": "webpack serve --open --config ./webpack.config.js --env mode=dev",
        "build": "webpack --config ./webpack.config.js --env mode=prod",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint --fix . --ext .ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "ci:format": "prettier --check \"src/**/*.ts\"",
        "prepare": "cd .. && husky rss-puzzle/.husky"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run ci:format",
            "pre-push": "npm run lint && npx validate-branch-name"
        }
    },
    "validate-branch-name": {
        "pattern": "^(core|init|feat|fix|refactor)\/RSS-PZ-\\d{2}_\\w+$",
        "errorMsg": "wrong branch name"
    },
    "repository": {
        "type": "git",
        "url": ""
    },
    "keywords": [],
    "author": "RS School",
    "license": "ISC",
    "homepage": "",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^7.0.1",
        "@typescript-eslint/parser": "^7.0.1",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^12.0.2",
        "css-loader": "^6.10.0",
        "dotenv-webpack": "^8.0.1",
        "eslint": "^8.56.0",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-webpack-plugin": "^4.0.1",
        "gh-pages": "^6.1.1",
        "html-webpack-plugin": "^5.6.0",
        "husky": "^9.0.11",
        "prettier": "3.2.5",
        "style-loader": "^3.3.4",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.3",
        "validate-branch-name": "^1.3.0",
        "webpack": "^5.90.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.0",
        "webpack-merge": "^5.10.0"
    }
}